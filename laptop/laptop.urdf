<?xml version="1.0" ?>

<robot name="laptop.urdf">
  <material name="Blue">
    <color rgba="0 0 1.0 1.0"/>
  </material>
  <material name="Red">
    <color rgba="1.0 0 0 1.0"/>
  </material>
  <link name="base_link">
    <contact>
      <lateral_friction value="1.0"/>
    </contact>
    <inertial>
      <mass value=".05"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy = "0 0 0"/>
      <geometry>
			  <mesh filename="file:///home/schen/CursorControl/laptop/body_visual.obj"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy = "0 0 0"/>
      <geometry>
			  <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    
  </link>
  <link name="screen_link">
    <contact>
      <lateral_friction value="1.0"/>
    </contact>
    <inertial>
      <origin xyz="0.01 0 .121" rpy="0 0 0"/>
      <mass value=".01"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
    <visual>
      <origin xyz="0.01 0 .121" rpy="0 0 0"/>
      <geometry>
			  <mesh filename="file:///home/schen/CursorControl/laptop/screen_visual.obj"/>
      </geometry>
      <material name="Red"/>
    </visual>
    <collision>
      <origin xyz="0.01 0 .121" rpy="0 0 0"/>
      <geometry>
			  <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
  </link>
  <joint name="hinge" type="revolute">
      
      <parent link="base_link"/>
      <child link="screen_link"/>
      <limit effort="100" velocity="100"/>
      <axis xyz="0 1 0"/>
      <dynamics friction="1.0"/>
  </joint>
</robot>